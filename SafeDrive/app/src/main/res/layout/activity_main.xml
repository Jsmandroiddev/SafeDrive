                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/setting" />

                <ImageView
                    android:id="@+id/imgabout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
