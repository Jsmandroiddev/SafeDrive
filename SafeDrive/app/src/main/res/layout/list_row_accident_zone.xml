<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/acc_block">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/acc_zone_icon"
            android:padding="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_acc_address_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vijay Nagar"
                android:textSize="18sp"
                android:padding="3dp"
                android:maxLines="1"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_acc_address_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:maxLines="2"
                android:textColor="@color/white"
                android:text="25 accidence recorded in last 6 months"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>