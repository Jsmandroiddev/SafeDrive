<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shareloc_layout"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/btn_share_mylocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="share my location"
        android:layout_alignParentBottom="true"/>

    <fragment
        android:id="@+id/shareloc_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/btn_share_mylocation"
        android:layout_alignParentTop="true"
        tools:context="com.example.jsm.safedrive.TripRecordingActivity"></fragment>

</RelativeLayout>